% \symbdef{name}{symbol}[how to present]{definition}
\NewDocumentCommand{\symbdef}{s m m O{#3} m O{#4}} {
	\IfBooleanTF{#1} {
		\newglossaryentry{#2} {
			name = \ensuremath{#4},
			user1 = \ensuremath{#3},
			sort = \ensuremath{#6},
			description = {#5},
			type = auxiliary
		}
		\expandafter\NewDocumentCommand\csname #2\endcsname{e{^_}}{
			\IfNoValueTF{##1} {
				\IfNoValueTF{##2} {
					\glsuseri*{#2}
				} {
					\glsuseri*{#2}[_{##2}]
				}
			} {
				\IfNoValueTF{##2} {
					\glsuseri*{#2}[^{##1}]
				} {
					\glsuseri*{#2}[^{##1}_{##2}]
				}
			}
		}%
	} {
		\newglossaryentry{#2} {
			name = \ensuremath{#4},
			user1 = \ensuremath{#3},
			sort = \ensuremath{#6},
			description = {#5},
			type = symbols
		}
		\expandafter\NewDocumentCommand\csname #2\endcsname{e{^_}}{
			\IfNoValueTF{##1} {
				\IfNoValueTF{##2} {
					\glsuseri{#2}
				} {
					\glsuseri{#2}[_{##2}]
				}
			} {
				\IfNoValueTF{##2} {
					\glsuseri{#2}[^{##1}]
				} {
					\glsuseri{#2}[^{##1}_{##2}]
				}
			}
		}%
	}
}

% \fundef{name}{symbol}[how to present]{function argument}{definition}
\NewDocumentCommand{\fundef}{s m m O{#3} m m O{#4}} {
	\IfBooleanTF{#1} {
		\newglossaryentry{#2} {
			name = \ensuremath{#4 \left( #5 \right)},
			user1 = \ensuremath{#3},
			sort = \ensuremath{#7},
			description = {#6},
			type = auxiliary
		}
		\expandafter\NewDocumentCommand\csname #2\endcsname{e{^_} m}{
			\IfNoValueTF{##1} {
				\IfNoValueTF{##2} {
					\glsuseri*{#2}\left(##3\right)
				} {
					\glsuseri*{#2}[_{##2}]\left(##3\right)
				}
			} {
				\IfNoValueTF{##2} {
					\glsuseri*{#2}[^{##1}]\left(##3\right)
				} {
					\glsuseri*{#2}[^{##1}_{##2}]\left(##3\right)
				}
			}
		}%
	} {
		\newglossaryentry{#2} {
			name = \ensuremath{#4 \left( #5 \right)},
			user1 = \ensuremath{#3},
			sort = \ensuremath{#7},
			description = {#6},
			type = symbols
		}
		\expandafter\NewDocumentCommand\csname #2\endcsname{e{^_} m}{
			\IfNoValueTF{##1} {
				\IfNoValueTF{##2} {
					\glsuseri{#2}\left(##3\right)
				} {
					\glsuseri{#2}[_{##2}]\left(##3\right)
				}
			} {
				\IfNoValueTF{##2} {
					\glsuseri{#2}[^{##1}]\left(##3\right)
				} {
					\glsuseri{#2}[^{##1}_{##2}]\left(##3\right)
				}
